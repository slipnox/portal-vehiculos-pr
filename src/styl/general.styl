.pv-container
  background #f1f1f1
  max-width $siteWith
  margin 150px auto

.section
  padding 0

.section__title
  max-width  100%
  background #d8d8d8
  padding 5px 15px

.section__content
  padding 30px 80px

.section__field
  display flex
  flex-flow row
  align-items center
  margin 0 0 12px 0

  .input-name
    font-size 13px
    font-weight 500

  .select,
  .vertical-inputs,
  .input
    width 100%
    max-width 195px

  > *
    flex 1
    margin 0

.transfer-via .section__field .select,
.transfer-via .section__field .vertical-inputs,
.transfer-via .section__field .input
  min-width 195px

.transfer-includes .section__field .select
  //max-width 80px

.section__field.align-items-top
  align-items flex-start

.vertical-inputs
  padding-top 3px

.left-column
  display: flex
  flex-direction column
  justify-content flex-start

  > *
    width: 100%

.margin-top-auto
  margin auto 0 0 0

.horizontal-inputs
  display flex
  align-items baseline
  max-width 195px
  justify-content flex-start

.submit-form
  text-align center

  button
    width 150px
    margin 15px 0 30px 0
